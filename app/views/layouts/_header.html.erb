<div class="row pl-4 pr-4 pt-2 pb-2 mb-4 border-bottom navBar">
        <div class="col-4"> <p class="h4"> <%= link_to "Weebbit", root_path, class: "navbar__brand" %> </p></div>
        <div class="col-4"><input type="text" class="form-control container-fluid" id="search" placeholder="Search"></div>
        <div class="col-4">
            <div class="float-right">
                <% if account_signed_in? %>
                <div class="dropdown dropleft">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <%= current_account.username %>
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <%= link_to "Profile", "", class: "dropdown-item"%>
                        <%= link_to "Settings", edit_account_registration_path, class: "dropdown-item"%>
                        <%= link_to "Sign Out", destroy_account_session_path, method: :delete ,class: "dropdown-item"%>
                    </div>
                </div>
                <% else %>
                    <%= link_to "Log In", new_account_session_path, class: "btn btn-outline-primary"%>
                    <%= link_to "Sign Up", new_account_registration_path, class: "btn btn-info"%>
                <% end %>
            </div>
        </div>
</div>