<% @posts.each do |post|%>
                <div class="card p-3 mt-3">
                    <div class="row">
                        <div class="col-1">
                            <%= gravatar_image_tag(post.account.email, size: 28, class: 'user__image' ,alt: post.account.username)%>
                        </div>
                        <div class="col-8 ml-2">
                            <h4><%= link_to post.title, community_post_path(post.community_id, post) %></h4>
                            
                            <p><em><small> <%= link_to post.community.name, community_path(post.community)%> Posted by <%= post.account.username %>
                                <%= time_ago_in_words(post.created_at) %> ago
                            </small></em></p>
                        </div>
                    </div>
                    <div class="container ml-4">
                        <p> <%= truncate post.body, length: 200 %> </p>
                    </div>
                </div>
                
<% end %>