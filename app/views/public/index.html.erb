<div class="container">
    <div class="row mt-6">
        <div class="col"> 
            <h2>Trending</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            Trending1
        </div>
        <div class="col-sm-3">
            Trending2
        </div>
        <div class="col-sm-3">
            Trending3
        </div>
        <div class="col-sm-3">
            Trending4
        </div>
    </div>
    <div class="row mt-4">
        <div class="col"> 
            <h2>Popular Posts</h2>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-8 col-sm-12"> 
            <% @posts.each do |post|%>
                <div class="card p-3 mt-3">
                    <div class="row">
                        <div class="col-1">
                            <%= gravatar_image_tag(post.account.email, size: 28, class: 'user__image' ,alt: post.account.username)%>
                        </div>
                        <div class="col-8 ml-2">
                            <h4><%= link_to post.title, community_post_path(post.community_id, post) %></h4>
                            
                            <p><em><small>Posted <%= time_ago_in_words(post.created_at) %> ago
                                by <%= post.account.username %>
                            </small></em></p>
                        </div>
                        <div class="container ml-4">
                            <p> <%= truncate post.body, length: 200 %> </p>
                        </div>
                    </div>
                </div>
                <div class="col">
                
                </div>
                
            <% end %>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class="sidebar">
                <p class="h5 mb-4">Popular Communities</p>
                <div class="card text-white bg-dark communities">
                    <ul class="list-group list-group-flush">
                    <% @communities.each do |community| %>
                        <li class="list-group-item list-group-item-dark"> <%= link_to community.name, community_path(community) %> </li>
                    <% end %>
                    </ul>
                </div>

            <%= link_to "View all", communities_path , class: "btn btn-light m-3 container-fluid"%>
            </div>
        </div>
    </div>
</div>