<% if account_signed_in? %>
    <div class="float-right">
        <%= link_to "Create New Community", new_community_path, class: "btn btn-outline-info ml-3"%>
    </div>
<% end %>
<% if @communities.size > 0 %>
    <div class="card">
            <div class="card-header">
                    Featured Commuities
            </div>
    <% @communities.each do |community| %>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item border-dark"><%= link_to community.name, community %></li>
            </ul>
        </div>
    <% end %>
    </div>
<% else %>
    <p>No Communities Yet</p>
<% end %>
